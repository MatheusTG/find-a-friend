{
  "name": "find-a-friend-dev",
  "dockerComposeFile": "docker-compose.dev.yml",
  "service": "devcontainer",
  "workspaceFolder": "/find-a-friend",

  "shutdownAction": "stopCompose",

  "customizations": {
    "vscode": {
      "extensions": ["prisma.prisma", "dbaeumer.vscode-eslint", "esbenp.prettier-vscode"],
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  },

  "postCreateCommand": "pnpm install && pnpm --filter api exec prisma generate && pnpm --filter api exec prisma migrate deploy"
}
